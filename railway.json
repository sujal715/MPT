{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm run build:fullstack"
  },
  "deploy": {
    "startCommand": "npm run start:fullstack",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300
  },
  "environments": {
    "production": {
      "NODE_ENV": "production",
      "NIXPACKS_NODE_VERSION": "18"
    }
  }
}
